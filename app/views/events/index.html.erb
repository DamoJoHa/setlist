<div class="container-custom">
  <div class="index-columns"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    <ul data-controller="event-list" data-event-list-target="list">
      <% @events.each do |event| %>
        <li class="index-card" data-action="click->map#focus click->event-list#highlight" data-lat="<%= event.venue.latitude =%>" data-lon="<%= event.venue.longitude =%>">
          <h2><%= event.title %></h2>
          <div>
          <h3><%= event.local_start_time %> - <%= event.local_end_time %></h3>
          <%= link_to "Details", event_path(event) %>
          </div>
        </li>
      <% end %>
    </ul>
    <div id="map" data-map-target="map">
    </div>
  </div>
</div>
